name 's6-dns'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: '2.4.0.0-38',
  'linux-api-headers': '4.9-rc3-2'
)

configure_flags(
  prefix: '/usr',
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)

cflags
harden

build do
  configure
  make
  install
end

